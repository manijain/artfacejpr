        #img_show_documents_parent_div{:style=>"float:left;position:relative;width:100px;margin-right:15px;height:100px;"}
          #img_show_documents{:style=>"overflow:hidden;display:inline;margin-right:10px;float:left;width:100px;height:100px;cursor:pointer"}  
            %img{:src=>"#{PAPERCLIP_STORAGE_PATH}images/uploaded/artwork/crops/artwork_documentations/#{@offer.artwork.id}/#{@offer.artwork.artwork_documentation_file_name}", :style=>"height:100%;width:100%", :alt=>"Image not added"}
          %i.icon-white.icon-zoom-in.documents{:style=>"position: absolute;right: 0px;top: 0;z-index: 10000;cursor:pointer"}
      %div{:style=>"float:left;width:100%;margin-top:10px"}
