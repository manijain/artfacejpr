        %p{:style=>"font-size:10px;display:inline;width:110px;float:left;margin-right:0px;"}=t '.detail_one'
        %p{:style=>"font-size:10px;display:inline;width:110px;float:left;margin-right:0px;"}=t '.detail_two'
        %p{:style=>"font-size:10px;display:inline;width:110px;float:left;margin-right:0px;"}=t '.document'
    .section_three_two{:style=>"float:left;width:35%"}
      %strong=t '.section_three_two_strong_text'
      %p=t '.section_three_two_text'
      %br
      %input{:type=>"button", :style=>"width:175px", :value=>"#{t '.section_three_two_button_one'}", :class=>"btn", :disabled=>"disable"}
