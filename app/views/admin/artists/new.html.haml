= javascript_include_tag "admin/admin_artist_validation.js"
=render :partial => "admin/layouts/application"
= render :partial => "admin/layouts/header"

%div
	%h3 ADD NEW ARTIST NAME
	%div.pull-right#cancel_new_artist{:style => "margin-right:80px;margin-top:-45px;"}=button_to "Cancel", "/admin/offers", :class => "btn"
	%div.head1_admin_offer{:style => "margin-top:41px;height:450px"}
		= form_for :artist_new, :url => "/admin/artists/create" do |f|
			-#= render :partial => 'shared/error_messages', :locals => { :object => f }
			.details_admin_artist
				%h6 FULL NAME
				= f.select :salutation, options_for_select(["Mr.","Ms."]), {}, {:class=>"head1_admin_offer_select1"}
				= f.text_field :artist_first_name, :placeholder=>"FIRST NAME*", :style=>"width:200px;border-radius: 0 0 0 0 !important;border: 1px solid black !important;"
				%img#error_new_artist_first_name{"data-original-title"=>"Please enter the artist first name", :src=>"/images/exclamation_mark.png", :style => "display:none"}
				= f.text_field :artist_last_name, :placeholder=>"LAST NAME*", :style=>"width:200px;border-radius: 0 0 0 0 !important;border: 1px solid black !important;"
				%img#error_new_artist_last_name{"data-original-title"=>"Please enter the artist last name", :src=>"/images/exclamation_mark.png", :style => "display:none"}
				%br
				%h6 DATE OF BIRTH 
				= f.text_field :artist_birth_date, :placeholder=>"YYYY-MM-DD", :style=> "width:493px;margin-left:14px;border-radius: 0 0 0 0 !important;border: 1px solid black !important;"
				%br
				%h6 DATE OF DEATH
				= f.text_field :artist_death_date, :placeholder=>"YYYY-MM-DD", :style=> "width:493px;margin-left:14px;border-radius: 0 0 0 0 !important;border: 1px solid black !important;"
				%br
				%h6 DESCRIPTION
				= f.text_area :artist_description, :placeholder=>"DESCRIBE THE ARTIST", :style => "height:261px;width:493px;margin-left:14px;border-radius: 0 0 0 0 !important;border: 1px solid black !important;"
				%br
				%div= f.submit :class=> "btn pull-right", :value=>"Add", :id => "submit_new_artist", :style =>"margin-right:35px;margin-top:45px;margin-bottom:25px;"

		%div#cancel_new_artist=button_to "Cancel", "/admin/offers", {:class=>"btn", :style=> "margin-left:15px;margin-top:25px;"}
		

	= render :partial => "admin/layouts/footer"


:javascript
	$("#artist_new_artist_birth_date").datepicker({ dateFormat: 'yy-mm-dd' })
	$("#artist_new_artist_death_date").datepicker({ dateFormat: 'yy-mm-dd' })