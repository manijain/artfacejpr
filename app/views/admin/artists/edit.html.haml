= javascript_include_tag "admin/admin_artist_validation.js"
= render :partial => "admin/layouts/application"
= render :partial => "admin/layouts/header"

%div{:style => "margin-left:100px"}

	%h3 Acknowledge New Artist Name
	%div#cancel_new_artist=button_to "Cancel", "/admin/offers"


	= form_for :artist_edit, :url => "/admin/artists/update", :html => {:id => "edit_artist_form"} do |f|
		= f.label :full_name
		= f.select :salutation, options_for_select(["Mr.","Ms."], :selected => @artist.artist_salutation)
		= f.text_field :artist_first_name, :value => @artist.artist_name.split(" ")[0]
		%img#error_edit_artist_first_name{"data-original-title"=>"Please enter the artist first name", :src=>"/images/exclamation_mark.png", :style => "display:none"}
		= f.text_field :artist_last_name, :value => @artist.artist_name.split(" ")[1]
		%img#error_edit_artist_last_name{"data-original-title"=>"Please enter the artist last name", :src=>"/images/exclamation_mark.png", :style => "display:none"}
		%br
		= f.label :birth_date
		= f.text_field :artist_birth_date, :value => @artist.artist_birth_date
		%br
		= f.label :death_date
		= f.text_field :artist_death_date, :value => @artist.artist_death_date
		%br
		= f.label :description
		= f.text_area :artist_description, :value => @artist.artist_description, :size => '30x5'
		%br
		= f.label :or_link_to_existing
		=f.select :link_to_existing, options_from_collection_for_select(Artist.find(:all), "id", "artist_name", @artist.id)

		=f.hidden_field :id, :value => @artist.id
		%div= f.submit :class=> "btn", :value=>"Acknowledge", :id => "submit_edit_artist"

	%div#cancel_new_artist=button_to "Cancel", "/admin/offers"
		

	= render :partial => "admin/layouts/footer"

:javascript
	$("#artist_edit_artist_birth_date").datepicker({ dateFormat: 'yy-mm-dd' })
	$("#artist_edit_artist_death_date").datepicker({ dateFormat: 'yy-mm-dd' })