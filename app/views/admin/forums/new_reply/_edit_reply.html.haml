.pull-left{:style => "background-color:#e9e9e9;width:804px;padding:8px;"}
  .pull-left{:style => "width:90px;margin-right:30px"}
    %h3.pull-left
      EDIT POST
    %span.pull-left{:style=>"margin-right:5px;"}="#{@parent_message.created_at.to_date}"
    %span.pull-left{:style=>"margin-left:5px;margin-right:5px;"}="|"
    %span.pull-left="#{@parent_message.created_at.strftime('%H:%M')}"
    %span.pull-left#parent_user_name="#{@parent_message.user.user_first_name[0]} #{@parent_message.user.user_last_name}"

  = form_for @parent_message, :url=>{:action=>"update_reply"}, :html => {:style=>"width:670px;", :class=>"pull-left"} do |f|
    = f.hidden_field :user_id
    = f.hidden_field :child_of
    = f.hidden_field :is_parent
    = f.hidden_field :offer_id
    = f.hidden_field :id, :value=>@parent_message_id
    = f.hidden_field :is_edited, :value=>true
    = f.text_area :forum_message_text, :style=>"width:650px;resize:none;height:250px"
    %label{:style=>"font-style:italic;"}
      ="This post has been edited by the forum edited"
    = f.submit "UPDATE POST", :class=>"btn pull-right", :id=>"update_post"