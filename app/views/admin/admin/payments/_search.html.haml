= hidden_field_tag :payment_basic_search, false
= hidden_field_tag :payment_advanced_search, false
= content_tag :div, :class=>"search pull-left", :style=>"width:840px;border:1px solid #727272;border-radius:8px;background-color:#727272;padding:5px;" do
	= content_tag :h3, :class=>"pull-left", :style=>"margin-right:25px;" do
		= "SEARCH"
	= form_for :user, :url=>admin_admin_user_search_path,:method=>"POST",:remote=>"true", :html=>{:class=>"filter_0_basic pull-left", :style=>"margin-top:20px;display:block;"} do |f|
		= f.hidden_field :search_basic, :value=>true
		= f.hidden_field :search_in, :value=>1
		= f.text_field :search_term, :class=>"basic_search_term pull-left", :placeholder=>"SEARCH", :style=>"border:1px solid black;width:450px;margin-right:5px", :id => "search_by_value"
		= image_tag "/images/plus.png", :class=>"pull-left admin_search_toggle_0 pointer", :style=>"margin-right:5px;"
		= f.submit "SEARCH", :class=>"btn pull-left", :id=> "payment_basic_search_btn"

	= form_for :user, :url=>admin_admin_user_search_path, :method=>"POST", :remote=>"true", :html=>{:class=>"filter_0_advanced pull-left", :style=>"display:none;margin-top:20px;"} do |f|
		= f.hidden_field :search_advanced, :value=>true
		= f.hidden_field :search_in, :value=>4
		= content_tag :ul, :class=>"search_filters unstyled pull-left", :style=>"width:550px;" do
			= content_tag :li, :class=>"filter_li pull-left" do
				%select#advanced_select_1.select_first.pull-left{:style=>"width:135px;"}
					%option{"data-function"=>"$(a).html('')", :value=>"#{t '.select_0'}"}="Please choose"
					%option{"data-function"=>"if (check_option('Concern')!=false){$(a).html(\"#{escape_javascript(render("admin\/admin\/payments\/advanced_search\/user_name"))}\");} else {alert('Error: Value already used ');}", :value=>"User name"}="User name"
					%option{"data-function"=>"if (check_option('Concern')!=false){$(a).html(\"#{escape_javascript(render("admin\/admin\/payments\/advanced_search\/payment"))}\");} else {alert('Error: Value already used ');}", :value=>"Payment"}="Payment"
					%option{"data-function"=>"if (check_option('Concern')!=false){$(a).html(\"#{escape_javascript(render("admin\/admin\/payments\/advanced_search\/country"))}\");} else {alert('Error: Value already used ');}", :value=>"Users country"}="Users country"
					%option{"data-function"=>"if (check_option('Concern')!=false){$(a).html(\"#{escape_javascript(render("admin\/admin\/payments\/advanced_search\/time_span_starts"))}\");} else {alert('Error: Value already used ');}", :value=>"Time span starts"}="Time span starts"
					%option{"data-function"=>"if (check_option('Concern')!=false){$(a).html(\"#{escape_javascript(render("admin\/admin\/payments\/advanced_search\/time_span_ends"))}\");} else {alert('Error: Value already used ');}", :value=>"Time span ends"}="Time span ends"
				= content_tag :span, :id=>"span_1", :class=>"append_span_field", :style=>"width:340px;" do
					=""
				= image_tag "/images/minus.png", :class=>"pointer admin_remove_search_field_0 pull-right"
				= image_tag "/images/plus.png", :class=>"pointer admin_add_search_field_0 pull-right"
		= f.submit "SEARCH", :class=>"btn submit_button pull-left", :id=> "payment_advanced_search_btn"	
