.sell-art-area-offers
  %h4{:style=>"border-bottom:1px solid black;"}="SELL ART: YOUR OFFERS"
  - if @offers.blank?
    %p="You have 0 offers online"
    %div{:style=>"float: left;"}
      %a.btn{:href=>"/offer/new"}="ADD NEW OFFER"
  - else
    - if @offers_online_count == 1
      %p="You have #{@offers_online_count} offer online. Click an offer to view and edit details."
    - else
      %p="You have #{@offers_online_count} offers online. Click an offer to view and edit details."
    .public_offers_page_step_three{:style=>"float:left;margin-top:10px;position:relative;"}
      %div{:style=>"float:left;width:810px;"}
        %span{:style=>"float:left;"}
          %span="Sort list by"
          %select{:style=>"margin:0;padding-left:0;width:100px;", :id=>"offers_public_page_sort_select"}
            %option{:value=>"artist name"}="artist name"
            %option{:value=>"end date"}="end date"
            %option{:value=>"new messages"}="new messages"
        %span{:style=>"float:left;margin-left:5px;"}
          %span="Show"
          %select{:style=>"margin:0;padding-left:0;width:120px;", :id=>"offers_public_page_sort_active_inactive"}
            %option{:value=>"show all offers"}="show all offers"
            %option{:value=>"active"}="active"
            %option{:value=>"inactive"}="inactive"
        %span{:style=>"float:left;margin-left:5px;"}
          %span{:style=>"margin-right:5px;line-height:30px;float:left;"}="Pictures per page"
          %select#offers_public_page_per_page{:style=>"width:45px;margin:0;padding-left:0;"}
            %option{:value=>"6"}="6"
            %option{:value=>"12"}="12"
            %option{:value=>"18"}="18"
            %option{:value=>"24"}="24"
        %span{:style=>"float:left;margin-left:5px;"}
          %span{:style=>"margin-right:5px;line-height:30px;float:left;"}="Layout"
          %select#basic_search_layout_select{:style=>"width:95px;padding-left:0;"}
            %option="Small previews"
            %option="Medium preview"
            %option="Large previews"
      %div{:style=>"float:left;width:810px;"}
        #search_data{:style=>"float:left;width:inherit;position:relative;"}
          = render :partial => "offer/sell-art/sell_art_area_offers_data"
      %div{:style=>"bottom: 28px;float: left;position: absolute;width: 350px;"}
        %a.btn.pull-left{:href=>"/offer/new"}="ADD NEW OFFER"
        %input.pull-left.btn#delete_offer{:type=>"button", :value=>"DELETE OFFER", :style=>"height: 30px; margin-left: 5px"}
        %input.pull-left.btn#stop_delete_offer{:type=>"button", :value=>"STOP DELETE", :style=>"display:none; height: 30px; margin-left: 5px"}
  #ajax-loader-big_for_offers{:style=>"left: 400px;position: absolute;top: 200px;z-index: 100;display:none;"}
    %img{:src=>"/images/ajax-loader-big.gif"}
  #overlay_div{:style=>"background-color: white;display: block;height: 100%;left: 0;opacity: 0.4;position: absolute;top: 0;width: 100%;z-index: 2;display:none;"}