        %img.cancel_detail_one_upload.pointer{:src=>"/images/close_button.png"}
        %img.cancel_detail_two_upload.pointer{:src=>"/images/close_button.png"}
        %img.cancel_documents_upload.pointer{:src=>"/images/close_button.png"}
