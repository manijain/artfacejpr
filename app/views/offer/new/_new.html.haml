    %div.pull-left
      %a.cancel_button_new.btn=t '.cancel'
      %input#offer_preview.btn{:type=>"button", :value=>"#{t '.preview'}"}
    %span.pull-right
      %input.new_offer_submit.btn{:type=>"button", :value=>"#{t '.submit'}"}
