.offer_layout_two
  .section_one
    %h3{:style=>"display:inline"}=t '.section_one_heading'
    %span{:style=>"font-size:10px"}=t '.section_one_text_one'
    %span
      %input.btn.new_offer_edit{:style=>"width:110px;margin-left:142px;margin-bottom:6px", :value=>"#{t '.section_one_button_edit'}", :type=>"button"}
      %input.new_offer_submit.btn{:style=>"width:110px;margin-bottom:6px", :value=>"#{t '.section_one_button_submit'}", :type=>"button"}
  .section_two
    .section_two_one
      #img_show_hi_res_all    
        #large_preview_for_hires
        .hidden#large_preview_for_detail1
        .hidden#large_preview_for_detail2
        .hidden#large_preview_for_documents
        %i.icon-white.icon-zoom-in.hi-res
        %i.hidden.icon-white.icon-zoom-in.detail-1
        %i.hidden.icon-white.icon-zoom-in.detail-2
        %i.hidden.icon-white.icon-zoom-in.documents
        %i.icon-fullscreen.icon-white.hi-res{:style=>"position:absolute;right:5px; bottom:5px; cursor:pointer;z-index:1"}
        %i.hidden.icon-fullscreen.icon-white.detail-1{:style=>"position:absolute;right:5px; bottom:5px; cursor:pointer;z-index:1"}
        %i.hidden.icon-fullscreen.icon-white.detail-2{:style=>"position:absolute;right:5px; bottom:5px; cursor:pointer;z-index:1"}
        %i.hidden.icon-fullscreen.icon-white.documents{:style=>"position:absolute;right:5px; bottom:5px; cursor:pointer;z-index:1"}
    .section_two_two
      %p.width_100.pull-left#summary_artist_name.summary_artist_name{:style=>"display:block;"}
      %p.width_100.pull-left#summary_artist_life_span.summary_artist_life_span{:style=>"display:block;margin-top:15px;"}=t '.section_two_two_artist_chronology'
      %p.width_100.pull-left#summary_painting_title.summary_painting_title{:style=>"display:block;margin-top:15px;"}
      %ul
        %li.pull-left
          %span.width_155=t '.summary_painting_title_category'
          %span.pull-left#summary_category
        %li.pull-left
          %span.width_155=t '.summary_painting_medium'
          %span.pull-left#summary_medium
        %li.pull-left
          %span.width_155=t '.summary_painting_sizes'
          %span.pull-left#summary_size
        %li.pull-left
          %span.width_155=t '.summary_painting_date_creation'
          %span.pull-left#summary_year
        %li.pull-left
          %span.width_155=t '.summary_painting_period'
          %span.pull-left#summary_period
        %li.pull-left
          %span.width_155=t '.summary_painting_signature'
          %span.pull-left#summary_signature
        %li.pull-left
          %span.width_155=t '.summary_painting_frame'
          %span.pull-left#summary_frame
        %li.pull-left
          %span.width_155=t '.summary_painting_certificate'
          %span.pull-left#summary_certificate
        %li.pull-left
          %span.width_155=t '.summary_painting_country'
          %span.pull-left#summary_country
        %li.pull-left
          %span.width_155=t '.summary_painting_submitted'
          %span.pull-left#summary_submitted
        %li.pull-left
          %span.width_155=t '.summary_painting_purpose'
          %span.pull-left#summary_purpose

  .section_three
    .section_three_one
      %div#part_one
        #img_show_hi_res_parent_div
          #img_show_hi_res
          %i.icon-white.icon-zoom-in.hi-res{:style=>"z-index:10000"}
        #img_show_detail_1_parent_div
          #img_show_detail_1
          %i.icon-white.icon-zoom-in.detail-1{:style=>"z-index:10000"}
        #img_show_detail_2_parent_div
          #img_show_detail_2
          %i.icon-white.icon-zoom-in.detail-2{:style=>"z-index:10000"}
        #img_show_documents_parent_div
          #img_show_documents
          %i.icon-white.icon-zoom-in.documents{:style=>"z-index:10000"}
      %div#part_two
        %p=t '.complete_view'
        %p=t '.detail_one'
        %p=t '.detail_two'
        %p=t '.document'
    .section_three_two
      %strong=t '.section_three_two_strong_text'
      %p=t '.section_three_two_text'
      %br
      %input.btn{:type=>"button", :style=>"width:175px", :value=>"#{t '.section_three_two_button_one'}", :disabled=>"disabled"}

  .section_four
    .section_four_one
      %h3=t '.section_four_one_heading'
      %textarea#summary_description{:readonly=>"readonly"}
    .section_four_two
      %input.btn{:type=>"button", :value=>"#{t '.section_four_two_button_one'}", :style=>"margin-top:65px;width:175px", :disabled=>"disabled"}
      %input.btn{:type=>"button", :value=>"#{t '.section_four_two_button_two'}", :style=>"margin-top:10px;width:175px", :disabled=>"disabled"}
      %input.btn{:type=>"button", :value=>"#{t '.section_four_two_button_three'}", :style=>"margin-top:10px;width:175px", :disabled=>"disabled"}
  
  .section_five
    %span#span_1=t '.section_five_text_one'
    %span#span_2
      %input.btn.new_offer_edit{:style=>"margin-left:80px;", :value=>"#{t '.section_five_button_one'}", :type=>"button"}
      %input.btn.new_offer_submit{:value=>"#{t '.section_five_button_two'}", :type=>"button"}
    -#%span#full_screen_hi_res_close
      ="Close x"
    -#%span#full_screen_documents_close
      ="Close x"