%ul#favourites_ul{:style=>"margin-left:30px;"}
  - @buy_your_favourites.each_with_index do |offer, index|
    %li
      %a{:href=>"/offer/show/#{offer.id}"}
        - if offer.messages.count > 0
          %span=offer.messages.count 
        =image_tag "https://artfacedev-pro.s3.amazonaws.com/public/images/uploaded/artwork/smalls/artwork_thumbnails/#{offer.artwork.id}/#{offer.artwork.artwork_thumbnail_file_name}", :alt=>"image not found", :alt=>"image not found"
        %i.icon-certificate
      %span{:style=>"text-align:center"}
        %span.span10current_offers_span_artist=offer.artwork.artist.artist_name || ""
        - if (humanize_time(offer.offer_end_date.to_i - Time.now.to_i)).blank?
          %span.span10wishlist_span_time="Remaining Time: unknown"
        - else
          %span.span10wishlist_span_time="Remaining Time: #{humanize_time(offer.offer_end_date.to_i - Time.now.to_i)}"
      %i.icon-remove{:style=>"position:absolute;right:0;display:none;cursor:pointer", :id=>"#{offer.id}"}