.pull-left{:style => "background-color:#e9e9e9;width:804px;padding:8px;"}
  .pull-left{:style => "width:90px;margin-right:30px"}
    %h3.pull-left
      REPLY
    %span.pull-left{:style=>"margin-right:5px;"}
      to
    %span.pull-left#parent_user_name="#{@parent_message.user.user_first_name[0]} #{@parent_message.user.user_last_name}"
  = form_for :forum_message, :url=>forum_message_create_path, :html => {:style=>"width:670px;", :class=>"pull-left"} do |f|
    = f.hidden_field :user_id, :value=>current_user.id
    = f.hidden_field :child_of, :value=>@parent_message.id
    = f.hidden_field :is_parent, :value=>false
    = f.hidden_field :offer_id, :value=>@parent_message.offer_id
    = f.text_area :forum_message_text, :style=>"width:650px;resize:none;height:250px"
    = f.hidden_field :child_reply, :value=>true, :name=>"child_reply"
    = f.submit "POST REPLY", :class=>"btn pull-right", :id=>"post_reply"