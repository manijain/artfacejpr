      %span{:style => "font-size:15px;float:left;"}=user.user_company
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} STREET
      %span{:style => "font-size:15px;float:left;"}=user.user_street
    %li{:style => " width:600px;float:left;"}
