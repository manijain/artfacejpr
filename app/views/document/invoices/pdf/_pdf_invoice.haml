      %span{:style => "font-size:15px;float:left;"}=user.user_zip_code
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} CITY
      %span{:style => "font-size:15px;float:left;"}=user.user_city
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} COUNTRY
      %span{:style => "font-size:15px;float:left;"}=user.user_country
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} PHONE NUMBER
      %span{:style => "font-size:15px;float:left;"}=user.user_phone_number
    %li{:style => " width:600px;float:left;"}
