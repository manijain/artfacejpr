- user = User.find(document.user_id)
%div{:style => "text-align:center;float:left"}
  %h2{:style => "font-size:30px;line-height:40px;"}="YOUR SUBSCRIPTION DATA"
  %ul{:style=>"list-style:none;margin-left:0px;text-align:center;width:500px;float:left"}
    %li{:style =>"width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"}="subscription name"
      %span{:style => "font-size:15px;float:left;"}=user.subscription.subscription_plan.subscription_name
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} ANNUAL PRICE
      %span{:style => "font-size:15px;float:left;"}=user.subscription.subscription_plan.subscription_fee
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} AVAILABLE OFFERS/YEAR
      %span{:style => "font-size:15px;float:left;"}=user.subscription.subscription_plan.subscription_paintings_allowed
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} VIEWABLE OFFERS/YEAR
      %span{:style => "font-size:15px;float:left;"}="unlimited"
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} SUBSCRIPTION METHOD
      %span{:style => "font-size:15px;float:left;"}=user.subscription.payment_type
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} SUBSCRIPTION PACKAGE RENEWAL
      %span{:style => "font-size:15px;float:left;"}=user.subscription.auto_renewal
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} FIRST NAME
      %span{:style => "font-size:15px;float:left;"}=user.user_first_name
    %li{:style => " width:600px;float:left;"}
      %span{:style => "width:350px; font-weight:bold; font-size:17px; margin-bottom:2px;margin-right:20px;text-align:right;float:left;"} LAST NAME
      %span{:style => "font-size:15px;float:left;"}=user.user_last_name
    %li{:style => " width:600px;float:left;"}
