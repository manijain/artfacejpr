= form_for :message, :url=>"/offer_show/save_reply", :remote=>true, :html => {:class=>"pull-left", :style=>"background-color: #727272;margin: 0;padding: 10px;width:800px;border-radius:10px;margin-top:10px;"} do |f|
  = f.hidden_field :user_id, :value=>current_user.id
  = f.hidden_field :child_of, :value=>@parent_message.id
  = f.hidden_field :is_parent, :value=>false
  = f.hidden_field :offer_id, :value=>@parent_message.offer_id
  = f.hidden_field :message_read, :value=>false
  %div{:style=>"width:800px;float:left;clear:both"}
    = f.label :message_title, :style=>"width:15%;margin-right:10px;text-align:right;line-height:30px;", :class=>"pull-left"
    = f.text_field :message_title, :style=>"width:80%;", :class=>"pull-left"
  %div{:style=>"width:800px;float:left;clear:both"}
    = f.label :message_text, :style=>"width:15%;margin-right:10px;text-align:right;line-height:30px;", :class=>"pull-left"
    = f.text_area :message_text, :style=>"width:80%;resize:none;height:100px;", :class=>"pull-left"
  = f.submit "POST REPLY", :class=>"btn pull-right", :style=>"margin-right:15px;"